<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <%end  %>
      <%= link_to "Delete #{task.title}",
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
